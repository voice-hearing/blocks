  "dependencies": {
    "hugo": ">=0.119.0",
    "hugoblox": ">=5.9.0",
    "tailwindcss": ">=3.0.0"
  },
  "features": [
    {
      "name": "Dynamic Font Sizing",
      "description": "Automatically scales tag sizes based on frequency using logarithmic calculation",
      "implemented": true
    },
    {
      "name": "Multiple Taxonomies",
      "description": "Support for tags, categories, and custom taxonomies",
      "implemented": true
    },
    {
      "name": "Tailwind CSS Integration",
      "description": "Modern responsive design with Tailwind utility classes",
      "implemented": true
    },
    {
      "name": "Dark Mode Support",
      "description": "Automatic theme switching with proper contrast ratios",
      "implemented": true
    },
    {
      "name": "Mobile Responsive",
      "description": "Mobile-first design that works on all screen sizes",
      "implemented": true
    },
    {
      "name": "Performance Optimized",
      "description": "Efficient Hugo templating with minimal overhead",
      "implemented": true
    },
    {
      "name": "Accessibility Ready",
      "description": "WCAG compliant with proper focus states and contrast",
      "implemented": true
    }
  ],
  "configuration": {
    "content": {
      "text": {
        "type": "string",
        "description": "Optional header text with markdown support",
        "default": null,
        "required": false
      },
      "taxonomy": {
        "type": "string",
        "description": "Taxonomy to display (tags, categories, etc.)",
        "default": "tags",
        "required": false,
        "options": [
          "tags",
          "categories",
          "authors",
          "series"
        ]
      },
      "count": {
        "type": "integer",
        "description": "Maximum number of terms to display (0 = unlimited)",
        "default": 20,
        "required": false,
        "min": 0,
        "max": 100
      }
    },
    "design": {
      "font_size_min": {
        "type": "float",
        "description": "Minimum font size (rem) for least frequent terms",
        "default": 0.8,
        "required": false,
        "min": 0.5,
        "max": 2.0
      },
      "font_size_max": {
        "type": "float",
        "description": "Maximum font size (rem) for most frequent terms",
        "default": 2.5,
        "required": false,
        "min": 1.0,
        "max": 4.0
      },
      "columns": {
        "type": "string",
        "description": "Layout columns (1 = center, 2 = left-aligned)",
        "default": "1",
        "required": false,
        "options": [
          "1",
          "2"
        ]
      }
    }
  },
  "examples": {
    "basic": {
      "title": "Basic Tag Cloud",
      "description": "Simple tag cloud with default settings",
      "yaml": "sections:\n  - block: tag_cloud\n    content:\n      text: \"Explore topics by popularity\"\n      taxonomy: \"tags\"\n      count: 20"
    },
    "advanced": {
      "title": "Advanced Configuration",
      "description": "Full configuration with custom styling",
      "yaml": "sections:\n  - block: tag_cloud\n    content:\n      text: |\n        ## Popular Topics\n        Discover the most discussed subjects on our blog.\n      taxonomy: \"tags\"\n      count: 50\n    design:\n      font_size_min: 0.8\n      font_size_max: 2.5\n      columns: \"1\""
    },
    "categories": {
      "title": "Category Cloud",
      "description": "Display categories instead of tags",
      "yaml": "sections:\n  - block: tag_cloud\n    content:\n      text: \"Browse content by category\"\n      taxonomy: \"categories\"\n      count: 15\n    design:\n      columns: \"2\""
    },
    "research": {
      "title": "Research Areas",
      "description": "Academic website with research topics",
      "yaml": "sections:\n  - block: tag_cloud\n    content:\n      text: |\n        ### Research Focus Areas\n        *Explore our key research domains and specializations.*\n      taxonomy: \"research_areas\"\n      count: 0\n    design:\n      font_size_min: 0.8\n      font_size_max: 3.0\n      columns: \"1\""
    }
  },
